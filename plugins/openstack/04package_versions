#!/bin/bash -u

((VERBOSITY_LEVEL>=3)) || exit 0

svc_indent="  $INDENT_STR"

declare -a ost_projects=(
    aodh
    barbican
    ceilometer
    ceph
    cinder
    designate
    glance
    gnocchi
    heat
    horizon
    keystone
    neutron
    nova
    octavia
    swift
)
declare -a ost_deps=(
    dnsmasq
    keepalived
    openvswitch-switch
    libvirt-{daemon,bin}
    qemu-kvm
    ovn
)

echo -e "  dpkg:"


if [ -z "`get_dpkg_l`" ]; then
    echo "${svc_indent}data source not found"
    exit 0
fi

found=`mktemp`
echo 0 > $found
for proj in ${ost_projects[@]} ${ost_deps[@]}; do
    readarray -t packages<<<`get_dpkg_l| egrep "^ii\s+$proj"| awk '{print $2}'`
    for pkg in ${packages[@]}; do
        ver=`get_dpkg_l| egrep "^ii\s+$pkg "| awk '{print $3}'`
        echo "  $INDENT_STR$pkg $ver"
        echo 1 > $found
    done | sort -k2
done
((`cat $found`)) || echo "  ${INDENT_STR}null"
rm $found
