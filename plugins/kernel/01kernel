#!/bin/bash -u
# This plugin displays information about the kernel.

echo -e "kernel:"

path=proc/cmdline
if [ -e "$path" ]; then
    cat $path|xargs -l -I{} echo "${INDENT_STR}{}"
else
    echo "${INDENT_STR}$path not found"
fi

# TODO: consider available zones in /proc/pagetypeinfo
#path=proc/pagetypeinfo
#if [ -e "$path" ]; then
#    cat proc/pagetypeinfo | egrep "zone\s+Normal,"| sed -r 's/\s+/ /g'
#fi

fail_count=`awk '$1=="compact_fail" {print $2}' proc/vmstat`
success_count=`awk '$1=="compact_success" {print $2}' proc/vmstat`
if ((success_count)); then
    pcent=$((fail_count/(success_count/100)))
    if ((pcent>10)); then
        echo "${INDENT_STR}WARNING: memory compaction failures > 10% of successes ($pcent%)"
    fi
fi

echo -e "systemd:"
path=sos_commands/systemd/systemctl_show_service_--all
if [ -e "$path" ]; then
    if `egrep -q "CPUAffinity=.+" $path`; then
        egrep "CPUAffinity=.+" $path| sort -u|xargs -l -I{} echo "${INDENT_STR}{}" 
    else
        echo "${INDENT_STR}CPUAffinity not set" 
    fi
else
    echo "${INDENT_STR}null"
fi

